{
  "name": "Color Snipper",
  "description": "Color Snipper",
  "version": "1.0",
  "author": "Yong Su",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Color Snipper"
  },
  "options_page": "",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ]
    }
  ]
}
